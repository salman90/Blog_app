
<% if flash[:notice] %>
    <%= flash[:notice]  %>
<% elsif flash[:alert] %>
    <%= flash[:alert] %>
<% end  %>
<div class="container text-center">
  <div id="postShowDes">
    <div class="row">
      <div class="col-md-12 text-center">
        <h3 class="postTitleShow"><%= @post.title %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="imageCon">
          <% if @post.image.present? %>
            <%= image_tag @post.image_url(:large), class: 'img-responsive img-thumbnail postShowImage' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p id="postShowBody"><%= @post.body %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <% if user_signed_in? && @post.favourited_by?(current_user) %>
          <%= link_to "Remove fav", post_favourite_path(@post, @post.favourite_for(current_user)), method: :delete %>
      </div>
        <% else %>
      <div class="col-md-3">
          <%= link_to "Fav", post_favourites_path(@post), class: "icon-big", method: :post   %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div id="comments">
          <% @post.comments.each do |comment| %>
            <%= render "/comments/comment", comment: comment %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 ">
        <div id="comment-form">
          <%= render "/comments/form" %>
        </div>
      </div>
    </div>
  </div>
</div>
