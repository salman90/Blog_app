<div class="container">
  <div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="caption">
        <h3><h3><%= link_to post.title, post_path(post) %></h3></h3>
        <p><%= post.body %></p>
        <%= link_to "Read more",post_path(post), class: "btn btn-lg btn-primary"  %>
      </div>
    </div>
  <% end %>
  </div>
</div>
