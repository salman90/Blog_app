<div class="container" >
  <div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="thumbnail" .img-thumbnail>
        <!-- <div id="postImage ">
          <% if post.image.present?  %>
            <%= image_tag post.image_url(:medium), class: 'img-responsive img-thumbnail' %>
          <% end %>
        </div> -->
        <div class="caption">
          <h3><h3><%= link_to post.title, post_path(post) %></h3></h3>
          <p><%= post.body.truncate(200, omission: '.......') %></p>
          <%= link_to "Read more",post_path(post), class: "btn btn-md btn-default"  %>
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
