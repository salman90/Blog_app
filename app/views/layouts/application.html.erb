<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Lora" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <li><%= link_to "Salman's blog" ,root_path, class:'navbar-brand'%></li>
      </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Blog" , posts_path %></li>
       </ul>
       <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a id="dLabel" data-target= ".navbar-collapse" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name %> <span class="caret"></span></a>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
              <li><%= link_to "Add new post", new_post_path %></li>
              <li><%= link_to "Favourites", favourites_path	 %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up" ,new_user_path%></li>
          <li><%= link_to "LogIn" ,new_session_path%></li>
        <% end %>
        </ul>
    </div>
  </nav>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% elsif flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
  <script type="text/javascript">
  $('.dropdown').hover(function() {
    $(".dropdown-menu").toggle();
  });
  </script>

<%= yield %>
</body>
</html>
