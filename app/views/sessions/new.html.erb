<div class="container" id="formSessions">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Sign In</h1>
    </div>
  </div>
  <%= form_tag sessions_path, validate: true  do %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4" id="emailSignUp">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4" id="passwordSignUp">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:email], class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4" id="SignUpButton">
      <%= submit_tag "SignIn",  class: 'btn btn-primary'%>
    </div>
  </div>
  <% end %>
</div>
