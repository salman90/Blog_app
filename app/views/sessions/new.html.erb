<div class="container" id="formSessions">
  <div class="row">
    <div class="col-md-12">
      <h1>Sign In</h1>
    </div>
  </div>
  <%= form_tag sessions_path do %>
  <div class="row">
    <div class="col-md-12">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= submit_tag "Log In" %>
    </div>
  </div>
  <% end %>
</div>
