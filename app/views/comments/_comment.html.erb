<div id="<%= dom_id(comment) %>">
  <h5><%= comment.user.full_name %></h5>
  <p><%= comment.body %>
    <%= link_to "Delete", post_comment_path(@post, comment),
                      method: :delete,
                      remote: true,
                      data: {confirm: "Are you sure?"} %>
  </p>
</div>
